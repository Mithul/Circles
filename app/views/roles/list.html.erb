<p id="notice"><%= notice %></p>

<h4 class="actual-h4"><%= @title %></h4>

<div id="roles">
  <div class="row">
    <% @roles.each do |role| %>
      <div class="col-sm-6">
        <h4 class="role-title"><%= role.name %></h4>
        <p><%= role.description %></p>
      </div>
    <% end %>
  </div>
</div>

<% if @member %>
	<%= link_to 'Edit Roles', edit_member_path(@member) %>
<% elsif @circle %>
	<%= link_to 'Edit Roles', edit_circle_path(@circle) %>
<% end %>