<p id="notice"><%= notice %></p>

<h1>Listing Checklist Items</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Checked</th>
      <th>Checklist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @checklist_items.each do |checklist_item| %>
      <tr>
        <td><%= checklist_item.title %></td>
        <td><%= checklist_item.checked %></td>
        <td><%= checklist_item.checklist %></td>
        <td><%= link_to 'Show', checklist_item %></td>
        <td><%= link_to 'Edit', edit_checklist_item_path(checklist_item) %></td>
        <td><%= link_to 'Destroy', checklist_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

