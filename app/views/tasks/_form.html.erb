<%= simple_form_for(@task) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="col-md-6">
      <%= f.input :title %>
    </div>
    <div class="col-md-6">
      <%= f.input :category %>
    </div>
    <%= f.input :description, :as => :ckeditor %>
    <div class="col-md-6">
      <%= f.input :from ,:as => :datetime_picker%>
    </div>
    <div class="col-md-6">
      <%= f.input :to ,:as => :datetime_picker%>
    </div>
    <%= f.association :circle, :collection => current_user.member.circles, :label => 'As part of which circle are you posting this task?' %>
    <%= f.association :task,  :collection => Task.where(:task => nil), :label => 'Parent Task(Leave blank if you want to start a new parent class)' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
