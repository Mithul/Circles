<div class="well description">
	<% post.comments.each do |comment| %>
		<div class="row">
			<div class="col-sm-12">
				<div class="row">
					<div class="col-sm-12">
			  			<p class="pull-left"><b><%= comment.user.name if comment.user %></b></p>
			  			<% if comment.user && comment.user == current_user %>
						    <%= link_to 'x', [comment.post, comment], method: :delete, class: "btn btn-danger pull-right btn-xs", title: "Detele Comment", data: { confirm: 'Are you sure?' } %>
						<% end %>
			  			<p class="pull-right"><%= comment.created_at %></p>
			  		</div>
	  			</div>
	  			<div class="row">
					<div class="col-sm-12">
		  				<p><%= comment.content %></p>
		  			</div>
	  			</div>
	  		</div>
	  	</div>
	<% end %>
	<%= simple_form_for [post,post.comments.build] do |f| %>
	  <%= f.input :content ,{ class: 'form-control', label: false} %>
	  <%= f.submit :Comment , class: 'btn btn-success' %>
	<% end %>
</div>