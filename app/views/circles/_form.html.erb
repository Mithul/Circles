<%= simple_form_for(@circle) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :circle %>
  </div>

  <% if params[:action]=='new' %>
    <%= f.simple_fields_for :members do |circle| %>
      <%= render 'member_fields', :f => circle %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'Add member', f, :members %>
    </div>
  <% end %>

  <%= f.simple_fields_for :roles do |circle| %>
    <%= render 'role_fields', :f => circle %>
  <% end %>
  <div class="links">
    <%= link_to_add_association 'Add Role', f, :roles %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
