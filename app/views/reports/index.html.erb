<style>
.tablesorter-headerAsc:after{
content:'\25B2';
}
.tablesorter-headerDesc:after{
content:'\25BC';
}
.tablesorter-headerUnSorted:after{
content:'\25BC \25B2';
}
</style>
<p id="notice"><%= notice %></p>

<h1>Listing Reports</h1>
<p>Click on the column header to sort according to that column</p>
<table class="table table-responsive table-hover tablesorter">
  <thead>
    <tr>
      <th>Title</th>
      <th>Created Date</th>
      <th>Meet or Event Date</th>
      <th>Category</th>
      <th>Bucket</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
    	<tr>
	  		<td><%= report.title %></td>
	  		<td><%= report.created_at.strftime('%d %b %Y') if report.date%></td>
	  		<td><%= report.date.strftime('%d %b %Y') if report.date%></td>
	  		<td><%= report.category if report.category %></td>
	  		<td><%= report.bucket if report.bucket%></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } if current_user.admin? %></td>
	    	<td><%= link_to 'Show', report_path(report.id, :format => :pdf) %></td>
	    	<td><%= link_to 'Edit', edit_report_path(report) %></td>
      	</tr>
	<% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Report', new_report_path %>



